{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Backend: FastAPI (uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}/backend",
      "args": ["app.main:app", "--reload", "--port", "8000"],
      "envFile": "${workspaceFolder}/backend/.env",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Frontend: http.server (5500)",
      "type": "debugpy",
      "request": "launch",
      "module": "http.server",
      "cwd": "${workspaceFolder}/frontend",
      "args": ["5500", "--bind", "127.0.0.1"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ],
  "compounds": [
    {
      "name": "Run: Backend + Frontend",
      "configurations": [
        "Backend: FastAPI (uvicorn)",
        "Frontend: http.server (5500)"
      ],
      "stopAll": true
    }
  ]
}
